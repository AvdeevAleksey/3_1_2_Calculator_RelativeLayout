<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="end"
        android:textSize="60sp"
        android:text="0" />
    <LinearLayout
        android:id="@+id/firstRowLayout"
        android:layout_toLeftOf="@id/buttonPlus"
        android:layout_below="@id/result"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnOne"
            android:text="@string/button_one"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btnTwo"
            android:layout_weight="1"
            android:text="@string/button_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btnThree"
            android:layout_weight="1"
            android:text="@string/button_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondRowLayout"
        android:layout_below="@id/firstRowLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnFore"
            android:layout_weight="1"
            android:text="@string/button_for"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btnFive"
            android:layout_weight="1"
            android:text="@string/button_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btnSix"
            android:layout_weight="1"
            android:text="@string/button_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdRowLayout"
        android:layout_below="@id/secondRowLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSeven"
            android:layout_weight="1"
            android:text="@string/button_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btnEight"
            android:layout_weight="1"
            android:text="@string/button_eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btnNine"
            android:layout_weight="1"
            android:text="@string/button_nine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourthRowLayout"
        android:layout_below="@id/thirdRowLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnZero"
            android:layout_weight="2"
            android:text="@string/button_zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btnPoint"
            android:layout_weight="1"
            android:text="@string/button_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/buttonPlus"
        android:layout_alignParentRight="true"
        android:layout_below="@id/result"
        android:text="@string/button_plus"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"/>
</RelativeLayout>